<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - ShopEasy</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/styles/main.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/"><i class="fas fa-shopping-bag"></i> ShopEasy</a>
            </div>
            
            <div class="nav-search">
                <form action="/products" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Search products..." class="search-input">
                    <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
                </form>
            </div>
            
            <div class="nav-links">
                <a href="/products" class="nav-link">Products</a>
                <a href="/cart" class="nav-link active"><i class="fas fa-shopping-cart"></i> Cart</a>
                <a href="/orders" class="nav-link">Orders</a>
                <% if (user.role === 'admin') { %>
                    <a href="/admin" class="nav-link admin-link">Admin</a>
                <% } %>
                <div class="user-dropdown">
                    <span class="username"><%= user.username %></span>
                    <div class="dropdown-content">
                        <a href="/profile">Profile</a>
                        <form action="/logout" method="POST" style="display: inline;">
                            <button type="submit" class="logout-btn">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="cart-page">
            <h1><i class="fas fa-shopping-cart"></i> Your Shopping Cart</h1>

            <% if (!cart || cart.items.length === 0) { %>
                <div class="empty-cart">
                    <i class="fas fa-shopping-cart"></i>
                    <h2>Your cart is empty</h2>
                    <p>Add some products to get started!</p>
                    <a href="/products" class="btn">Continue Shopping</a>
                </div>
            <% } else { %>
                <div class="cart-content">
                    <div class="cart-items">
                        <% cart.items.forEach(item => { %>
                            <div class="cart-item" data-product-id="<%= item.productId._id %>">
                                <div class="item-image">
                                    <% if (item.productId.images && item.productId.images.length > 0) { %>
                                        <img src="<%= item.productId.images[0] %>" alt="<%= item.productId.name %>">
                                    <% } else { %>
                                        <div class="no-image">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="item-details">
                                    <h3><a href="/product/<%= item.productId._id %>"><%= item.productId.name %></a></h3>
                                    <p class="item-category"><%= item.productId.category %></p>
                                    <p class="item-price">$<%= item.price.toFixed(2) %> each</p>
                                    <% if (item.productId.stock < item.quantity) { %>
                                        <p class="stock-warning">
                                            <i class="fas fa-exclamation-triangle"></i>
                                            Only <%= item.productId.stock %> left in stock
                                        </p>
                                    <% } %>
                                </div>
                                
                                <div class="item-quantity">
                                    <label>Quantity:</label>
                                    <div class="quantity-controls">
                                        <button class="quantity-btn" onclick="changeQuantity('<%= item.productId._id %>', <%= item.quantity - 1 %>)">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" value="<%= item.quantity %>" min="1" max="<%= item.productId.stock %>" 
                                               onchange="changeQuantity('<%= item.productId._id %>', this.value)" 
                                               class="quantity-input">
                                        <button class="quantity-btn" onclick="changeQuantity('<%= item.productId._id %>', <%= item.quantity + 1 %>)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="item-total">
                                    <p class="total-price">$<%= (item.price * item.quantity).toFixed(2) %></p>
                                </div>
                                
                                <div class="item-actions">
                                    <button class="remove-btn" onclick="removeItem('<%= item.productId._id %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        <% }) %>
                    </div>

                    <div class="cart-summary">
                        <div class="summary-card">
                            <h3>Order Summary</h3>
                            
                            <div class="summary-row">
                                <span>Subtotal (<%= cart.items.length %> items):</span>
                                <span>$<%= cart.totalAmount.toFixed(2) %></span>
                            </div>
                            
                            <div class="summary-row">
                                <span>Shipping:</span>
                                <span><%= cart.totalAmount >= 50 ? 'FREE' : '$9.99' %></span>
                            </div>
                            
                            <div class="summary-row">
                                <span>Tax (8.5%):</span>
                                <span>$<%= (cart.totalAmount * 0.085).toFixed(2) %></span>
                            </div>
                            
                            <hr>
                            
                            <div class="summary-row total">
                                <span>Total:</span>
                                <span>$<%= (cart.totalAmount + (cart.totalAmount >= 50 ? 0 : 9.99) + cart.totalAmount * 0.085).toFixed(2) %></span>
                            </div>
                            
                            <% if (cart.totalAmount < 50) { %>
                                <div class="free-shipping-notice">
                                    <i class="fas fa-truck"></i>
                                    Add $<%= (50 - cart.totalAmount).toFixed(2) %> more for FREE shipping!
                                </div>
                            <% } else { %>
                                <div class="free-shipping-notice success">
                                    <i class="fas fa-check"></i>
                                    You qualify for FREE shipping!
                                </div>
                            <% } %>
                            
                            <a href="/checkout" class="checkout-btn">
                                <i class="fas fa-lock"></i> Proceed to Checkout
                            </a>
                            
                            <a href="/products" class="continue-shopping">
                                <i class="fas fa-arrow-left"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>ShopEasy</h3>
                    <p>Your trusted e-commerce partner for quality products and exceptional service.</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 ShopEasy. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Change quantity function
        async function changeQuantity(productId, newQuantity) {
            if (newQuantity < 1) {
                removeItem(productId);
                return;
            }

            try {
                const response = await fetch('/cart/update', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: parseInt(newQuantity)
                    })
                });

                const result = await response.json();
                if (result.success) {
                    location.reload();
                } else {
                    showNotification('Failed to update quantity', 'error');
                }
            } catch (error) {
                showNotification('Failed to update quantity', 'error');
            }
        }

        // Remove item function
        async function removeItem(productId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            try {
                const response = await fetch(`/cart/remove/${productId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();
                if (result.success) {
                    location.reload();
                } else {
                    showNotification('Failed to remove item', 'error');
                }
            } catch (error) {
                showNotification('Failed to remove item', 'error');
            }
        }

        // Notification function
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.add('show');
            }, 100);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }
    </script>

    <style>
        .cart-page {
            padding: 2rem 0;
        }

        .cart-page h1 {
            text-align: center;
            color: #333;
            margin-bottom: 2rem;
            font-size: 2.5rem;
        }

        .empty-cart {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .empty-cart i {
            font-size: 5rem;
            color: #dee2e6;
            margin-bottom: 1rem;
        }

        .empty-cart h2 {
            color: #333;
            margin-bottom: 1rem;
        }

        .empty-cart p {
            color: #6c757d;
            margin-bottom: 2rem;
        }

        .cart-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
        }

        .cart-items {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .cart-item {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            display: grid;
            grid-template-columns: 100px 1fr auto auto auto;
            gap: 1.5rem;
            align-items: center;
        }

        .item-image {
            width: 100px;
            height: 100px;
            border-radius: 10px;
            overflow: hidden;
        }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .no-image {
            width: 100%;
            height: 100%;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: 2rem;
        }

        .item-details h3 {
            margin-bottom: 0.5rem;
            font-size: 1.2rem;
        }

        .item-details h3 a {
            color: #333;
            text-decoration: none;
            transition: color 0.3s;
        }

        .item-details h3 a:hover {
            color: #007bff;
        }

        .item-category {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
        }

        .item-price {
            color: #007bff;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .stock-warning {
            color: #dc3545;
            font-size: 0.8rem;
            margin: 0;
        }

        .item-quantity label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #333;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            overflow: hidden;
        }

        .quantity-btn {
            background: #f8f9fa;
            border: none;
            padding: 0.5rem;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-btn:hover {
            background: #e9ecef;
        }

        .quantity-input {
            border: none;
            text-align: center;
            width: 60px;
            height: 40px;
            font-weight: 600;
        }

        .item-total {
            text-align: right;
        }

        .total-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: #007bff;
            margin: 0;
        }

        .remove-btn {
            background: #dc3545;
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .remove-btn:hover {
            background: #c82333;
            transform: scale(1.05);
        }

        .cart-summary {
            position: sticky;
            top: 100px;
            height: fit-content;
        }

        .summary-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .summary-card h3 {
            color: #333;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            font-size: 1rem;
        }

        .summary-row.total {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
        }

        .summary-card hr {
            border: none;
            border-top: 2px solid #e9ecef;
            margin: 1.5rem 0;
        }

        .free-shipping-notice {
            background: #fff3cd;
            color: #856404;
            padding: 0.75rem;
            border-radius: 8px;
            margin: 1.5rem 0;
            text-align: center;
            font-size: 0.9rem;
        }

        .free-shipping-notice.success {
            background: #d4edda;
            color: #155724;
        }

        .checkout-btn {
            background: #28a745;
            color: white;
            padding: 1rem;
            text-decoration: none;
            border-radius: 8px;
            display: block;
            text-align: center;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 1rem;
            transition: all 0.3s;
        }

        .checkout-btn:hover {
            background: #1e7e34;
            transform: translateY(-1px);
        }

        .continue-shopping {
            color: #007bff;
            text-decoration: none;
            display: block;
            text-align: center;
            padding: 0.75rem;
            transition: color 0.3s;
        }

        .continue-shopping:hover {
            color: #0056b3;
        }

        .nav-link.active {
            color: #007bff;
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .cart-content {
                grid-template-columns: 1fr;
            }

            .cart-item {
                grid-template-columns: 80px 1fr;
                grid-template-rows: auto auto auto;
                gap: 1rem;
            }

            .item-image {
                width: 80px;
                height: 80px;
            }

            .item-details {
                grid-column: 2;
            }

            .item-quantity,
            .item-total,
            .item-actions {
                grid-column: 1 / -1;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }
        }
    </style>
</body>
</html>